{
  "extends": "@tsconfig/node-lts-strictest-esm/tsconfig.json",
  "compilerOptions": {
    "outDir": "build",
    "rootDir": "./",
    "allowUnusedLabels": true,
    "noImplicitOverride": false,
    "lib": ["DOM", "es2022"],
    "declaration": true
  },
  "exclude": [
    "**/*.d.ts",
    "build",
    "node_modules",
    "benchmarks",
    "__tests__",
    "jest.config.cjs",
    ".eslintrc.js",
    "README.md",
    "typedoc.json",
    "docs"
  ]
}
